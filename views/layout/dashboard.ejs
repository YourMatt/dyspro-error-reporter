<%- include header.ejs %>

<div ng-controller="DashboardController">

<ul class="container nav nav-tabs">
    <li class="navbar-text">Environment</li>
    <% for (var i = 0; i < environments.length; i++) { %>
    <li<% if (selected_environment == environments[i] ) { %> class="active"<% } %> environment="<%= environments[i] %>"><a href="#"><%= environments[i] %></a></li>
    <% } %>
</ul>

<br/><br/>
<div class="container">
    <table class="table table-striped">
        <thead>
        <tr>
        <td>Date</td>
        <td>Error Message</td>
        <td></td>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="error in errors">
        <td>{{error.date}}</td>
        <td>{{error.message}}</td>
        <td class="text-right"><a class="btn btn-sm btn-primary" href="#">View</a></td>
        </tr>
        </tbody>
    </table>
</div>

</div>

<%- include footer.ejs %>